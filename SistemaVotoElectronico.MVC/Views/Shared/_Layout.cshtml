<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Voto</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/zephyr/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/views.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaVotoElectronico.MVC.styles.css" asp-append-version="true" />

    <script>
        const savedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-theme', savedTheme);
    </script>
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg border-bottom mb-3">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-check-to-slot me-2"></i>Sistema Voto
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @{
                        var controladorActual = ViewContext.RouteData.Values["Controller"]?.ToString();
                        var accionActual = ViewContext.RouteData.Values["Action"]?.ToString();
                        bool esPaginaAuth = controladorActual == "Account" &&
                        (accionActual == "Login" || accionActual == "Register" ||
                        accionActual == "ForgotPassword" || accionActual == "ResetPassword");
                    }

                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        @if (!esPaginaAuth)
                        {
                            @if (!User.Identity!.IsAuthenticated || User.IsInRole("Votante"))
                            {
                                <li class="nav-item ms-lg-3 mt-2 mt-lg-0">
                                    <a class="btn btn-success fw-bold shadow-sm px-4" asp-controller="Sufragio" asp-action="Index">
                                        <i class="fa-solid fa-person-booth me-2"></i> IR A CABINA
                                    </a>
                                </li>
                            }
                        }

                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item dropdown ms-lg-3">
                                <a class="nav-link dropdown-toggle border rounded px-3 mt-2 mt-lg-0" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-gear me-1"></i> Panel Admin
                                </a>
                                <ul class="dropdown-menu shadow border-0 mt-2">
                                    <li><h6 class="dropdown-header text-uppercase fs-7">👥 Usuarios</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Administradores" asp-action="Index">Administradores</a></li>

                                    <li><a class="dropdown-item" asp-controller="JefesDeMesa" asp-action="Index">Jefes de Mesa</a></li>
                                    <li><a class="dropdown-item" asp-controller="Votantes" asp-action="Index">Votantes</a></li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li><h6 class="dropdown-header text-uppercase fs-7">🗳️ Elección</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Elecciones" asp-action="Index">Elecciones</a></li>
                                    <li><a class="dropdown-item" asp-controller="Mesas" asp-action="Index">Mesas</a></li>
                                    <li><a class="dropdown-item" asp-controller="ListaElectorales" asp-action="Index">Listas Electorales</a></li>
                                    <li><a class="dropdown-item" asp-controller="Presidentes" asp-action="Index">Presidentes</a></li>
                                    <li><a class="dropdown-item" asp-controller="Vicepresidentes" asp-action="Index">Vicepresidentes</a></li>
                                    <li><a class="dropdown-item" asp-controller="Asambleistas" asp-action="Index">Asambleistas</a></li>
                                    <li><a class="dropdown-item" asp-controller="PadronElectorales" asp-action="Index">Padrón Electoral</a></li>

                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item fw-bold" asp-controller="Votos" asp-action="Index">
                                            <i class="fa-solid fa-chart-pie me-2"></i> Auditoría Votos
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item me-3">
                            <button class="btn btn-sm btn-outline-secondary rounded-circle d-flex align-items-center justify-content-center"
                                    id="theme-toggle" title="Cambiar tema" style="width: 38px; height: 38px;">
                                <i class="fa-solid fa-moon"></i>
                            </button>
                        </li>

                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link fw-bold" asp-controller="Home" asp-action="Perfil" title="Mi Perfil">
                                    <i class="fa-regular fa-circle-user me-1 text-primary"></i>
                                    @User.Identity.Name
                                    <span class="badge bg-info text-white ms-1 rounded-pill" style="font-size: 0.7em;">
                                        @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm rounded-pill px-3" asp-controller="Account" asp-action="Logout">
                                    <i class="fa-solid fa-right-from-bracket me-1"></i> Salir
                                </a>
                            </li>
                        }
                        else
                        {
                            @if (!esPaginaAuth)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Register">Registrarse</a>
                                </li>
                                <li class="nav-item ms-2">
                                    <a class="btn btn-primary px-4 shadow-sm" asp-controller="Account" asp-action="Login">
                                        <i class="fa-solid fa-right-to-bracket me-2"></i> Acceder
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const toggleBtn = document.getElementById('theme-toggle');
            const icon = toggleBtn.querySelector('i');
            const htmlElement = document.documentElement;

            // Función para actualizar icono (Sol o Luna)
            const updateIcon = (theme) => {
                if (theme === 'dark') {
                    icon.classList.remove('fa-moon');
                    icon.classList.add('fa-sun');
                } else {
                    icon.classList.remove('fa-sun');
                    icon.classList.add('fa-moon');
                }
            };

            updateIcon(htmlElement.getAttribute('data-theme'));

            toggleBtn.addEventListener('click', () => {
                const currentTheme = htmlElement.getAttribute('data-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

                htmlElement.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                updateIcon(newTheme);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>