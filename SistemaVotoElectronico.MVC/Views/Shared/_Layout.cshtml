<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Voto Electrónico</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaVotoElectronico.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Sistema Voto 🗳️</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @{
                        var controladorActual = ViewContext.RouteData.Values["Controller"]?.ToString();
                        var accionActual = ViewContext.RouteData.Values["Action"]?.ToString();
                        bool esPaginaAuth = controladorActual == "Account" && (accionActual == "Login" || accionActual == "Register");
                    }

                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        @if (!esPaginaAuth)
                        {
                            @if (!User.Identity!.IsAuthenticated || User.IsInRole("Votante"))
                            {
                                <li class="nav-item ms-2">
                                    <a class="btn btn-success text-white fw-bold shadow-sm" asp-controller="Sufragio" asp-action="Index">
                                        🗳️ IR A CABINA DE VOTACIÓN
                                    </a>
                                </li>
                            }
                        }

                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item dropdown ms-3">
                                <a class="nav-link dropdown-toggle text-dark border rounded px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    ⚙️ Panel Administrativo
                                </a>
                                <ul class="dropdown-menu shadow">
                                    <li><h6 class="dropdown-header text-primary">👥 Usuarios</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Administradores" asp-action="Index">Administradores</a></li>
                                    <li><a class="dropdown-item" asp-controller="Candidatos" asp-action="Index">Candidatos</a></li>
                                    <li><a class="dropdown-item" asp-controller="JefesDeMesa" asp-action="Index">Jefes de Mesa</a></li>
                                    <li><a class="dropdown-item" asp-controller="Votantes" asp-action="Index">Votantes</a></li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li><h6 class="dropdown-header text-primary">🗳️ Elección</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Elecciones" asp-action="Index">Elecciones</a></li>
                                    <li><a class="dropdown-item" asp-controller="Mesas" asp-action="Index">Mesas</a></li>
                                    <li><a class="dropdown-item" asp-controller="ListaElectorales" asp-action="Index">Listas Electorales</a></li>
                                    <li><a class="dropdown-item" asp-controller="PadronElectorales" asp-action="Index">Padrón Electoral</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Votos" asp-action="Index">📊 Auditoría Votos</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-controller="Home" asp-action="Perfil" title="Ir a mi perfil">
                                    👤 @User.Identity.Name <span class="badge bg-secondary text-white ms-1">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-outline-danger btn-sm mt-1" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
                            </li>
                        }
                        else
                        {
                            if (!esPaginaAuth)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Registrarse</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-primary ms-2" asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-auto">
        <div class="container py-3 text-center">
            &copy; 2026 - Sistema de Voto Electrónico - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>