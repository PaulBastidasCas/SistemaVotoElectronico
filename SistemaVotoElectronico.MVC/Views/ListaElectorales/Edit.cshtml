@using SistemaVotoElectronico.Modelos.Entidades
@model ListaElectoral

@{
    ViewData["Title"] = "Editar Lista Electoral";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i>Editar Lista Electoral</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Logotipo" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre del Partido/Movimiento</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Movimiento Unidad" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Siglas" class="form-label fw-bold">Siglas</label>
                        <input asp-for="Siglas" class="form-control" placeholder="Ej: M.U." />
                        <span asp-validation-for="Siglas" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="NumeroLista" class="form-label fw-bold">Número de Lista</label>
                        <input asp-for="NumeroLista" class="form-control" type="number" />
                        <span asp-validation-for="NumeroLista" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Color" class="form-label fw-bold">Color Representativo</label>
                        <input asp-for="Color" type="color" class="form-control form-control-color w-100" title="Elige un color" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="EleccionId" class="form-label fw-bold">ID Elección</label>
                        <input asp-for="EleccionId" class="form-control" readonly="@(User.IsInRole("Candidato") ? "readonly" : null)" />
                        <span asp-validation-for="EleccionId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Actualizar Logotipo</label>
                    <input type="file" name="fotoUpload" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.Logotipo))
                    {
                        <div class="mt-2">
                            <small class="text-muted">Logotipo actual:</small><br />
                            <img src="@Model.Logotipo" alt="Logo Actual" style="max-height: 80px;" class="img-thumbnail mt-1" />
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between">
                    @if (User.IsInRole("Candidato"))
                    {
                        <a asp-controller="Home" asp-action="Perfil" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-2"></i>Cancelar y Volver
                        </a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-2"></i>Volver al Listado
                        </a>
                    }

                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa-solid fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}