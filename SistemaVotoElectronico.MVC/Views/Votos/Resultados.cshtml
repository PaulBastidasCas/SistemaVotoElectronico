@model ResultadoEleccionDto
@using Newtonsoft.Json
@using SistemaVotoElectronico.Modelos.DTOs

@{
    ViewData["Title"] = "Resultados Electorales";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">@Model.Eleccion</h2>
            <p class="text-muted">
                Total Votos Presidenciales: <strong>@Model.TotalVotosPresidente.ToString("N0")</strong> <br/>
                Total Votos Asambleistas: <strong>@Model.TotalVotosAsambleistas.ToString("N0")</strong> <br/>
                Escaños a repartir: <strong>@Model.TotalEscanos</strong> |
                Corte: @Model.FechaCorte
            </p>
        </div>
        <div>
            <a asp-action="DescargarPdf" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-danger btn-lg shadow">
                📄 Descargar Reporte Oficial (PDF)
            </a>
        </div>
    </div>

    <!-- SECCION 1: RESULTADOS PRESIDENTE -->
    <div class="card shadow-sm mb-5 border-primary">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">1. RESULTADOS PRESIDENCIALES</h4>
        </div>
        <div class="card-body p-0">
             <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th>Organización Política</th>
                            <th class="text-center">Votos Totales</th>
                            <th class="text-center">Porcentaje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ResultadosPresidente)
                        {
                            <tr>
                                <td>
                                    <span class="badge me-2" style="background-color: @item.Color; width: 15px; height: 15px; display:inline-block;"> </span>
                                    <strong>@item.Siglas</strong> - @item.Lista
                                </td>
                                <td class="text-center">@item.VotosTotales.ToString("N0")</td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center justify-content-center">
                                        <span class="me-2">@item.Porcentaje%</span>
                                        <div class="progress" style="width: 100px; height: 6px;">
                                            <div class="progress-bar" role="progressbar" style="width: @item.Porcentaje%; background-color: @item.Color"></div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
             <div class="p-3">
                 <h6 class="text-muted">Gráfico de Tendencia Presidencial</h6>
                 <canvas id="barChartPres" height="100"></canvas>
             </div>
        </div>
    </div>

    <!-- SECCION 2: RESULTADOS ASAMBLEISTAS -->
    <div class="card shadow-sm mb-4 border-success">
        <div class="card-header bg-success text-white text-center">
             <h4 class="mb-0">2. RESULTADOS ASAMBLEISTAS (WEBSTER)</h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th>Organización Política</th>
                            <th class="text-center">Votos Totales</th>
                            <th class="text-center">Porcentaje</th>
                            <th class="text-center">Escaños Asignados</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ResultadosAsambleistas)
                        {
                            <tr>
                                <td>
                                    <span class="badge me-2" style="background-color: @item.Color; width: 15px; height: 15px; display:inline-block;"> </span>
                                    <strong>@item.Siglas</strong> - @item.Lista
                                </td>
                                <td class="text-center">@item.VotosTotales.ToString("N0")</td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center justify-content-center">
                                        <span class="me-2">@item.Porcentaje%</span>
                                        <div class="progress" style="width: 100px; height: 6px;">
                                            <div class="progress-bar" role="progressbar" style="width: @item.Porcentaje%; background-color: @item.Color"></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (item.EscanosAsignados > 0)
                                    {
                                        <span class="badge bg-success fs-6">@item.EscanosAsignados 🏛️</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        var etiquetasPres = @Html.Raw(JsonConvert.SerializeObject(Model.ResultadosPresidente.Select(x => x.Siglas)));
        var votosPres = @Html.Raw(JsonConvert.SerializeObject(Model.ResultadosPresidente.Select(x => x.VotosTotales)));
        var coloresPres = @Html.Raw(JsonConvert.SerializeObject(Model.ResultadosPresidente.Select(x => x.Color)));

        // 1. Gráfico de Barras (Presidente)
        var ctxBar = document.getElementById('barChartPres').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: etiquetasPres,
                datasets: [{
                    label: 'Votos Presidenciales',
                    data: votosPres,
                    backgroundColor: coloresPres,
                    borderColor: '#ccc',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });
    </script>
}