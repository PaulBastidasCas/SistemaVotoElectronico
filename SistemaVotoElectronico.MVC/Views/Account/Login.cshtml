@using SistemaVotoElectronico.Modelos.DTOs
@model LoginDto
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="auth-wrapper">
    <div class="col-md-7 col-lg-5 col-xl-4">
        <div class="auth-card">
            <div class="auth-body">
                <div class="text-center">
                    <div class="auth-icon-circle">
                        <i class="fa-solid fa-user-lock"></i>
                    </div>
                    <h2 class="auth-title">Bienvenido de nuevo</h2>
                    <p class="auth-subtitle">Ingresa tus credenciales para acceder</p>
                </div>

                @if (ViewData["Error"] != null)
                {
                    <div class="alert alert-danger d-flex align-items-center rounded-3 mb-4 shadow-sm border-0">
                        <i class="fa-solid fa-triangle-exclamation me-2 fs-5"></i>
                        <div>@ViewData["Error"]</div>
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Correo" class="form-control" id="fEmail" placeholder="x" required />
                        <label for="fEmail" class="text-muted">Correo Electrónico</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Contrasena" class="form-control" id="fPass" placeholder="x" type="password" required />
                        <label for="fPass" class="text-muted">Contraseña</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-3 rounded-3 fw-bold shadow-sm" style="font-size: 1.1rem;">
                        Iniciar Sesión <i class="fa-solid fa-arrow-right ms-2"></i>
                    </button>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-2 border-top">
                        <a asp-action="Register" class="fw-bold text-decoration-none">Crear cuenta</a>
                        <a asp-action="ForgotPassword" class="text-muted small text-decoration-none">Recuperar contraseña</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>