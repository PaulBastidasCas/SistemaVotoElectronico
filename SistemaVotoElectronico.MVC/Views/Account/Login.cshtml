@model SistemaVotoElectronico.Modelos.LoginDto
<h2>Iniciar Sesión</h2>

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}

<form asp-action="Login" method="post">
    <div class="mb-3">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" type="email" required />
    </div>
    <div class="mb-3">
        <label>Contraseña</label>
        <input asp-for="Contrasena" class="form-control" type="password" required />
    </div>
    <button type="submit" class="btn btn-primary">Ingresar</button>
    <a asp-action="Register" class="btn btn-link">Registrarse</a>
</form>