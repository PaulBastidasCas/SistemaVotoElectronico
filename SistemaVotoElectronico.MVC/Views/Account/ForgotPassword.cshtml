@using SistemaVotoElectronico.Modelos.Entidades
@using SistemaVotoElectronico.Modelos.Requests
@using SistemaVotoElectronico.Modelos.DTOs
@model RecuperarDto
<h2>Recuperar Contraseña</h2>
<p>Ingresa tu correo para recibir un código de recuperación.</p>

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}

<form asp-action="ForgotPassword" method="post">
    <div class="mb-3">
        <label>Correo Electrónico</label>
        <input asp-for="Correo" class="form-control" type="email" required />
    </div>
    <button type="submit" class="btn btn-warning">Enviar Código</button>
    <a asp-action="Login" class="btn btn-link">Volver</a>
</form>