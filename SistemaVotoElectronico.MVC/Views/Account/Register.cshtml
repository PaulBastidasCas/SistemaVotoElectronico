@model SistemaVotoElectronico.Modelos.RegistroDto
<h2>Registro</h2>

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}

<form asp-action="Register" method="post">
    <div class="mb-3">
        <label>Cédula</label>
        <input asp-for="Cedula" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Nombre Completo</label>
        <input asp-for="NombreCompleto" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" type="email" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Contraseña</label>
        <input asp-for="Contrasena" class="form-control" type="password" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Confirmar Contraseña</label>
        <input asp-for="ConfirmarContrasena" class="form-control" type="password" />
        <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Registrarse</button>
</form>
