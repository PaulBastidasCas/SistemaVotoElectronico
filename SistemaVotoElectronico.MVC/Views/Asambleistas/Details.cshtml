@model SistemaVotoElectronico.Modelos.Entidades.Asambleista

@{
    ViewData["Title"] = "Detalles Asambleista";
}

<h1>Detalles</h1>

<div>
    <h4>Asambleísta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Orden)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Orden)
        </dd>
        <dt class = "col-sm-2">
            Lista Electoral ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ListaElectoralId)
        </dd>
        <dt class = "col-sm-2">
            Fotografía
        </dt>
        <dd class = "col-sm-10">
             @if (!string.IsNullOrEmpty(Model.Fotografia))
            {
                <img src="@Model.Fotografia" style="max-width: 200px;" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
