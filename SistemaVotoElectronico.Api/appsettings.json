{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SistemaVotacionAPIContext.postgresql": "User id=postgres;Password=1224;Host=localhost;Port=5433;Database=SistemaVotoElectronico"
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5051"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/SistemaVotoElectronico_api_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}. {Exception}{NewLine}",
          "restrictedToMinimumLevel": "Information",
          "fileSizeLimitBytes": 100485760,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "buffered": false
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/SistemaVotoElectronico_api_critical_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}. {Exception}{NewLine}",
          "restrictedToMinimumLevel": "Error",
          "fileSizeLimitBytes": 100485760,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "buffered": false
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  }
}
